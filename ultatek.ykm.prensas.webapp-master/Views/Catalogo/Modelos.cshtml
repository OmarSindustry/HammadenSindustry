@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<body>

    <!-- Inner content -->
    <div class="content-inner">



        <!-- Content area -->
        <div class="content">


            <!-- Basic datatable -->
            <div class="card">

                <div class="card-body">


                    <div class="row">



                        <div class="col-8">
                        </div>

                        <div class="col-2">
                            <label>Tipo de empaque</label>
                            <div class="form-group">
                                <select class="form-control select-search" id="modelosDropdown">
                                </select>
                            </div>
                        </div>

                        <div class="col-2">

                            <div class="form-group">
                                <label>Editar Modelo</label>
                                <div class="input-group">
                                    <button type="button" class="btn btn-light btn-block" onclick="editar_modelo()"><i class="icon-search4"></i> Editar modelo</button>

                                </div>
                            </div>
                        </div>

                    </div>







                </div>

            </div>


            <!-- Left fixed column -->
            <div class="card">

                <table class="table datatable-basic display compact nowrap" id="torque">
                    <thead>
                        <tr>
                            <th>Codigo de modelo</th>
                            <th>Numero de parte</th>
                            <th>Piezas por golpe</th>
                            <th>SPM</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!-- /left fixed column -->



        </div>
        </div>
        <!-- /inner content -->




</body>
</html>


<div id="editar_modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Maquina</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form action="#">
                <div class="modal-body">


                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <label>Codigo de Modelo</label>
                                <input type="text" id="model_codeEditar" placeholder="" class="form-control" disabled>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <label>Numero de parte</label>
                                <input type="text" id="part_numberEditar" placeholder="" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <label>Numero de golpes</label>
                                <input type="text" id="piezas_golpeEditar" placeholder="" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <label>SPM</label>
                                <input type="text" id="spmEditar" placeholder="" class="form-control">
                            </div>
                        </div>
                    </div>



                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="submit_editar()">Modificar</button>
                </div>


            </form>
        </div>
    </div>
</div>


<div class="modal fade bd-example-modal-lg" id="loader" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-sm">


        <div class="theme_xbox_lg" style="margin-top: 100%;">
            <div class="pace_progress" data-progress-text="60%" data-progress="60"></div>
            <div class="pace_activity"></div>
        </div>


    </div>
</div>

