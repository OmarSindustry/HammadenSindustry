@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<body>

    <!-- Inner content -->
    <div class="content-inner">



        <!-- Content area -->
        <div class="content">


            <!-- Basic datatable -->
            <div class="card">

                <div class="card-body">


                    <div class="row">




                        <div class="col-8">
                        </div>

                        <div class="col-2">

                            <div class="form-group">
                                <label>Editar conexion</label>
                                <div class="input-group">
                                    <button type="button" class="btn btn-light btn-block" onclick="editar_conexion()"><i class="icon-search4"></i> Editar conexión</button>

                                </div>
                            </div>
                        </div>

                        <div class="col-2">

                            <div class="form-group">
                                <label>Agregar conexion</label>
                                <div class="input-group">
                                    <button type="button" class="btn btn-light btn-block" onclick="agregar_conexion()"><i class="icon-search4"></i> Agregar conexión</button>

                                </div>
                            </div>
                        </div>



                    </div>

                </div>
                <!-- /basic datatable -->


            </div>
            <!-- /content area -->
            <!-- Basic datatable -->
            <div class="card">

                <table class="table datatable-basic display compact nowrap" id="torques">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!-- /basic datatable -->


        </div>
        <!-- /inner content -->

    </div>



</body>
</html>


<!-- Vertical form modal -->
<div id="agregar_modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar conexión</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form action="#">
                <div class="modal-body">


                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <label>Nombre</label>
                                <input type="text" id="nombreAgregar" placeholder="" class="form-control">
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="submit_agregar()">Agregar</button>
                </div>


            </form>
        </div>
    </div>
</div>



<!-- Vertical form modal -->
<div id="editar_modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar conexión</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form action="#">
                <div class="modal-body">


                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <label>Nombre</label>
                                <input type="text" id="nombreEditar" placeholder="" class="form-control">
                            </div>
                        </div>
                    </div>



                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="submit_editar()">Modificar</button>
                </div>


            </form>
        </div>
    </div>
</div>








<!-- /vertical form modal -->
